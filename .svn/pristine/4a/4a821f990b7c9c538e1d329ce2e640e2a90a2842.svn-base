    },
    data() {
      return {
        loading: 0,
        contractId:'',
        pageFlag:1,//1.新建 2.编辑 3.修订
        formItem:{
          providerName:'',
          provide:'',
          ask:'',
          duty:'',
          deliveryAddress:'',
          materDefendPackFee:'',
          materQuality:'',
          breach:'',
          dispute:'',
          fromStart:'',
          other:'',
          contractId:'',
          materId:'',
          materName:'',
          spec:'',
          model:'',
          subType:'',
          use:'',
          price:'',
          afterPrice:'',
          remark:'',
          amount:0,
          amountBig:'',
          //createTime:page.formatDate(new Date(),'yyyy-MM-dd'),

          providerId:'',
          signAddress:'洛阳洛北重工机械有限公司',
          partA:'洛阳洛北重工机械有限公司',

          partB:'',
          partBAddress:'',
          partBLegalPerson:'',
          //    委托代理人            联系人
          partBAgent:'',
          partBTelphone:'',
          partBFaxNo:'',

          partBBank:'',
          partBCardNo:'',
          partBPostcode:'',
        },
        list:[],  
        oriItem:{},
        storage:[],
         //验证
         ruleValidate: {
          sales: [
          {required: true, whitespace: true, message: '定作人不能为空', trigger: 'blur'},
          {type: 'string', max: 100, message: '不能超过100个字', trigger: 'blur'}
          ],
          partB: [
          {required: true, message: '承揽人不能为空'}
          ],
          contractNo: [
          {required: true, whitespace: true, message: '合同编号不能为空', trigger: 'blur'},
          {type: 'string', max: 50, message: '不能超过50个字', trigger: 'blur'}
          ],
          signDate: [
          {required: true, whitespace: true, message: '签订日期不能为空', trigger: 'blur'},
          ],
          signAddress: [
          {required: true, whitespace: true, message: '签订地点不能为空', trigger: 'blur'},
          {type: 'string', max: 100, message: '不能超过100个字', trigger: 'blur'}
          ],
          deliveryAddress: [
          {required: true, whitespace: true, message: '交货、验收地点不能为空', trigger: 'blur'},
          {type: 'string', max: 100, message: '不能超过100个字', trigger: 'blur'}
          ],
        }
      }
    },
    mounted: function () { 
      this.contractId = this.$route.query.id;
      if(this.contractId){
        this.pageFlag = 2;
        this.load();
      }else{
        this.pageFlag = 1;
        this.initNew();
      }
    },
    computed: {
      pageTitle(){
        if(this.pageFlag == 1){
          return '外委合同加工 - 创建';
        }
        if(this.pageFlag == 2){
          return '外委合同加工 - 编辑';
        }
      }
    },
    methods: {
      load() {
        this.loading = 1;
        this.$http.post("/api/outcontract/get?contractId=" + this.contractId,{}).then((res) => {
          this.loading = 0;
          if (res.data.code == 0) {
            if(res.data.data){
              this.oriItem = eval('('+JSON.stringify(res.data.data)+')');
              Object.assign(this.formItem,res.data.data);
              this.list = res.data.data.outContractDetailList;
              this.formItem.amountBig = this.digitUppercase(this.formItem.amount);
            }else{
              this.$Message.error('订单不存在！');
              this.goBack();
            }
          } else {
            this.$Message.error(res.data.message);
          }
        }).catch((error) => {
          this.loading = 0;
          this.$Message.error("操作失败！")
        });
      }, 
      initNew(){
        this.loading = 1;
        this.$http.post("/api/outcontract/getPrevious",{}).then((res) => {
          this.loading = 0;
          debugger;
          if (res.data.code == 0) {
            if(res.data.data){
              this.oriItem = eval('('+JSON.stringify(res.data.data)+')');
              //Object.assign(this.formItem,res.data.data);
              Object.assign(this.formItem,{
                provide:res.data.data.provide,
                ask:res.data.data.ask,
                duty:res.data.data.duty,
                deliveryAddress:res.data.data.deliveryAddress,
                materDefendPackFee:res.data.data.materDefendPackFee,
                materQuality:res.data.data.materQuality,
                breach:res.data.data.breach,
                dispute:res.data.data.dispute,
                fromStart:res.data.data.fromStart,
                other:res.data.data.other,
                partA:res.data.data.partA,
                partAAddress:res.data.data.partAAddress,
                partALegalPerson:res.data.data.partALegalPerson,
                partAAgent:res.data.data.partAAgent,
                partATelphone:res.data.data.partATelphone,
                partAFaxNo:res.data.data.partAFaxNo,
                partABank:res.data.data.partABank,
                partACardNo:res.data.data.partACardNo,
                partAPostcode:res.data.data.partAPostcode,
                createTime:page.formatDate(new Date(),'yyyy-MM-dd'),
              });
              this.formItem.signDate = page.formatDate(new Date(),'yyyy-MM-dd');
              if(this.$user.empInfo){
                this.formItem.sales = this.$user.empInfo.empId;
                this.formItem.sales = this.$user.empInfo.trueName;
              }
              this.list = [];
              this.list.push(this.$refs.editable.listNewRow());

            }else{
              this.$Message.error('订单不存在！');
              this.goBack();
            }
          } else {
            this.$Message.error(res.data.message);
          }
        }).catch((error) => {
          this.loading = 0;
          this.$Message.error("操作失败！")
        });


        //this.list.push(this.$refs.editable.listNewRow());
      }, 
      save(){
        var form = {
          outContractDetailList:[]
        };

        Object.assign(form,this.formItem);


        if(form.deliveryAddress == null || form.deliveryAddress == ''){
         this.$Message.error('请选择交货、验收地点！');
         return;
       }
        // if(this.list.length<1){
        //   this.$Message.error('请至少添加一行物件明细！');
        //   return;
        // }
        var pass = true;
        this.$refs.form.validate((valid) => {
          pass = valid;
        })
        
        if (!pass) {
          this.$Message.error('验证未通过！');
          return;
        }

        form.outContractDetailList = [];
        // 明细
        for(var i = 0;i<this.list.length;i++){
          var item = this.list[i];
          var msg = '明细第 ' + (i+1) + ' 行，';
          if(item.materName != ''&&item.drawing != ''){
            // 日期格式转换
            item.deliveryDate = page.formatDate(item.deliveryDate);
            form.outContractDetailList.push(item);
          }else{
            this.$Message.error(msg + '名称和图号不能为空！或者去掉当前物件明细行，并至少保留一行物件明细！');
            return;
          }
        }
        // 提交
        this.loading = 1;
        var uri = '/api/outcontract/add';
        if(this.pageFlag == 2){
          uri = '/api/outcontract/update';
        }

        this.$http.post(uri, form).then((res) => {
          this.loading = 0;
          if (res.data.code == 0) {
            this.$Message.info("操作成功！");
            this.goBack();
          } else {
            this.$Message.error(res.data.message);
          }
        }).catch((error) => {
          this.loading = 0;
          this.$Message.error("请求失败，请重新操作")
        });
      },   
      onAmountChange(val){
        this.formItem.amount = val;
        this.formItem.amountBig=this.digitUppercase(val);
      },
      datePickerChange(val){
        this.formItem.signDate = val;
      },
      switStorage(){

      },
      reset(){
        if(this.pageFlag == 1){
          this.initNew();
        }else {
          Object.assign(this.formItem,this.oriItem);
        }
      },
      selProvider(){
       var sel = this.$refs.selProvider;//引用该控件，赋值给变量对象
       sel.show({
        ok:(data)=>{
          if(data){
            this.formItem.providerId = data.providerId;

            this.formItem.partB = data.providerName;
            this.formItem.partBAddress = data.address;
            this.formItem.partBLegalPerson = data.legalPerson;
            //    委托代理人            联系人
            this.formItem.partBAgent = data.linkMan;
            this.formItem.partBTelphone = data.linkPhone;
            this.formItem.partBFaxNo = data.faxNo;

            this.formItem.partBBank = data.bank;
            this.formItem.partBCardNo = data.bankCardNo;
            this.formItem.partBPostcode = data.postcode;
          }
        }
      });
     },
     goBack(){
      this.$router.push('/outcontract');
    },
    goImport(){
      var sel = this.$refs.selInStockApply;
      sel.show({
        isMulti:false,
        selectPerson:false,
        selectDept:true,
        ok:(select)=>{ 
          if(select){
            this.formItem.relatedBillId = select.relatedBillId;
            this.formItem.relatedBillId1 = select.relatedBillId1;

          }
        }
      });
    },
    digitUppercase(n) {
     var fraction = ['角', '分'];
     var digit = [
     '零', '壹', '贰', '叁', '肆',
     '伍', '陆', '柒', '捌', '玖'
     ];
     var unit = [
     ['圆', '万', '亿'],
     ['', '拾', '佰', '仟']
     ];
     var head = n < 0 ? '欠' : '';
     n = Math.abs(n);
     var s = '';
     for (var i = 0; i < fraction.length; i++) {
      s += (digit[Math.floor(n * 10 * Math.pow(10, i)) % 10] + fraction[i]).replace(/零./, '');
    }
    s = s || '整';
    n = Math.floor(n);
    for (var i = 0; i < unit[0].length && n > 0; i++) {
      var p = '';
      for (var j = 0; j < unit[1].length && n > 0; j++) {
        p = digit[n % 10] + unit[1][j] + p;
        n = Math.floor(n / 10);
      }
      s = p.replace(/(零.)*零$/, '').replace(/^$/, '零') + unit[0][i] + s;
    }
    return head + s.replace(/(零.)*零分/, '分')
    .replace(/(零.)+/g, '零')
    .replace(/^整$/, '整');

  }
}
